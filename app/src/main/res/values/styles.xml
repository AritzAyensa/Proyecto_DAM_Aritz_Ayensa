<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!-- Botones -->
    <style name="ButtonCancel">
        <item name="android:backgroundTint">@color/rojo_oscuro</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="ButtonAccept">
        <item name="android:backgroundTint">@color/rojo</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="MyDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/ButtonAccept</item>
        <item name="buttonBarNeutralButtonStyle">@style/ButtonAccept</item>
        <item name="buttonBarNegativeButtonStyle">@style/ButtonCancel</item>
        <item name="backgroundColor">?attr/colorSurface</item>

        <item name="materialCardViewStyle">@style/MyMaterialCardView</item>

    </style>



    <!-- EditText con lÃ­nea inferior -->
    <style name="Widget.Proyecto_DAM_Aritz_Ayensa.EditText.Underline" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:background">@null</item>
        <item name="boxStrokeColor">?attr/colorOnSurface</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>

    <!-- RecyclerView con fondo y borde redondeado -->
    <style name="Widget.Proyecto_DAM_Aritz_Ayensa.RecyclerView.Border" parent="Widget.MaterialComponents.CardView">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>

    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">?attr/colorOnSurface</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>
    <style name="CustomAutoCompleteTextViewLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">?attr/colorOnSurface</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>



    <style name="MyMaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>


</resources>