<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_tareas_campos_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:gravity="start">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Campo de color -->
        <TextView
            android:id="@+id/colorLista"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_circular"/>

        <!-- Campo de nombre de la tarea -->
        <TextView
            android:id="@+id/nombreLista"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:text="@string/item_lista_tv_titulo_lista"
            android:textColor="?attr/colorOnSurface"
            android:layout_gravity="center_vertical" />

        <!-- Campo de hora inicio -->
        <TextView
            android:id="@+id/numeroItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_lista_tv_elementos"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_gravity="center_vertical" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorOnSurface"
        android:layout_marginTop="10sp"
    />
</LinearLayout>
