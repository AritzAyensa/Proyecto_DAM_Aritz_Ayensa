<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_marginBottom="100sp"
    android:layout_marginTop="50sp"
    android:layout_marginStart="30sp"
    android:layout_marginEnd="30sp"
    android:paddingTop="10sp"
    tools:context=".activities.ui.inicio.InicioFragment">

    <TextView
        android:id="@+id/inicio_tv_mis_listas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inicio_tv_mis_listas"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
        android:id="@+id/inicio_btn_recargar_listas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_autorenew_24"
        app:layout_constraintStart_toEndOf="@id/inicio_tv_mis_listas"
        android:layout_marginLeft="10sp"
        android:background="@android:color/transparent"
        tools:ignore="MissingConstraints"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_mis_listas"
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:minHeight="250sp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:flow_maxElementsWrap="4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inicio_tv_mis_listas" />
    <ProgressBar
        android:id="@+id/loading_spinner"
        style="?android:progressBarStyleLarge"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inicio_tv_mis_listas"
        android:layout_marginTop="50sp"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:id="@+id/inicio_tv_listas_compartidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inicio_tv_listas_compartidas"
        android:textSize="20sp"
        android:layout_marginTop="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recycler_mis_listas"
        />
    <ImageButton
        android:id="@+id/inicio_btn_recargar_listas_compartidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_autorenew_24"
        android:layout_marginTop="8sp"
        android:layout_marginLeft="10sp"

        android:background="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@id/inicio_tv_listas_compartidas"
        app:layout_constraintBottom_toTopOf="@id/recycler_listas_compartidas"
        app:layout_constraintTop_toBottomOf="@id/recycler_mis_listas"

        tools:ignore="MissingConstraints"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_listas_compartidas"
        android:layout_width="match_parent"
        android:minHeight="200sp"
        android:layout_height="170sp"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="50sp"
        android:background="@drawable/edittext_border"
        app:layout_constraintTop_toBottomOf="@id/inicio_tv_listas_compartidas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:flow_maxElementsWrap="4"
        />
    <ProgressBar
        android:id="@+id/loading_spinner2"
        style="?android:progressBarStyleLarge"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inicio_tv_listas_compartidas"
        android:layout_marginTop="50sp"
        tools:ignore="MissingConstraints"/>

    <Button
        android:id="@+id/btnAnadirLista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:text="@string/inicio_btn_aÃ±adir_lista"
        style="@style/ButtonAccept"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>